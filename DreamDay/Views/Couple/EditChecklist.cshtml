@model Checklist

@{
    ViewBag.Title = "Edit Wedding Checklist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Wedding Checklist</h2>

<form asp-action="EditChecklist" asp-controller="Couple" method="post">
    @Html.AntiForgeryToken()

    @* Hidden ID field *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Checklist Title</label>
        <input asp-for="Title" class="form-control" placeholder="e.g., Main Wedding Tasks" required maxlength="100"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Update Checklist</button>
        <a asp-controller="Couple" asp-action="Index" class="btn-link">Cancel</a>
    </div>
</form>