@model DreamDay.ViewModels.WeddingChecklistViewModel
@{
    ViewData["Title"] = "Create New Checklist";
    Layout = "_Dashboard";
}

<h2>Create a New Wedding Checklist</h2>

<form asp-controller="Couple" asp-action="CreateChecklist" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">Checklist Title</label>
        <input asp-for="Title" class="form-control" placeholder="e.g., Main Wedding Tasks" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create Checklist</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>