@model IEnumerable<Checklist>

@{
    ViewBag.Title = "Wedding Checklists";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Wedding Checklists</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Checklist</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't have any checklists yet. Create your first one to get started!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Created Date</th>
                        <th>Items Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var checklist in Model)
                    {
                        <tr>
                            <td>@checklist.Title</td>
                            <td>@checklist.CreatedDate.ToShortDateString()</td>
                            <td>@(checklist.Items != null ? checklist.Items.Count : 0)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Items" asp-route-id="@checklist.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-list-check"></i> View Items
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@checklist.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@checklist.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>