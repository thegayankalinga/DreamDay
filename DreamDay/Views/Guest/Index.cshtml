
@model List<Guest>
@{
    ViewData["Title"] = "Guest List";
}

<h2>Guest List</h2>

<a asp-action="CreateGuest" asp-controller="Guest" class="btn btn-primary mb-2">Add Guest</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>RSVP</th>
        <th>Meal</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>

        @foreach (var guest in Model)
        {
            <tr>
                <td>@guest.GuestName</td>
                <td>@guest.RsvpStatus</td>
                <td>@guest.MealPreference</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="EditGuest" asp-controller="Guest" asp-route-id="@guest.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>

                        <form asp-action="DeleteGuest" asp-route-id="@guest.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this Guest?');">
                            <button type="submit" class="btn btn-sm btn-danger d-flex align-items-center">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    
    </tbody>
</table>
