@{
    ViewData["Title"] = "Wedding Planning Made Simple";
}

<div class="hero-section text-center py-5">
    <h1 class="display-4 mb-4">Your Perfect Day Begins Here</h1>
    <p class="lead mb-5">Planning your dream wedding has never been easier. Let us help you create memories that last a lifetime.</p>
    
    @if (User.Identity is { IsAuthenticated: false })
    {
        <div class="d-flex justify-content-center gap-3 mb-4">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                <i class="fas fa-heart me-2"></i>Start Planning
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </a>
        </div>
    }
    else
    {
        <a asp-controller="Couple" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fas fa-tasks me-2"></i>Go to Dashboard
        </a>
    }
</div>

<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                    <h3 class="card-title h5">Plan Your Timeline</h3>
                    <p class="card-text">Keep track of all your important dates and deadlines with our intuitive planning tools.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="card-title h5">Manage Guest Lists</h3>
                    <p class="card-text">Easily organize your guests, track RSVPs, and manage seating arrangements.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-dollar-sign fa-3x text-primary mb-3"></i>
                    <h3 class="card-title h5">Budget Tracking</h3>
                    <p class="card-text">Stay on top of your wedding expenses with detailed budget management tools.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5 my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2>Why Choose DreamDay?</h2>
                <p class="lead">We understand that planning a wedding can be overwhelming. That's why we've created tools to make the process as stress-free as possible.</p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-primary me-2"></i> All-in-one wedding planning platform</li>
                    <li class="mb-2"><i class="fas fa-check text-primary me-2"></i> Customizable checklists and timelines</li>
                    <li class="mb-2"><i class="fas fa-check text-primary me-2"></i> Connect with trusted vendors</li>
                    <li class="mb-2"><i class="fas fa-check text-primary me-2"></i> Mobile-friendly design</li>
                </ul>
                <a href="#" class="btn btn-outline-primary mt-3">Learn More</a>
            </div>
            <div class="col-lg-6">
                <img src="/images/feature_banner.jpg" alt="Wedding planning" class="img-fluid rounded shadow" />
            </div>
        </div>
    </div>
</div>

