@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="card-title text-danger mb-4">Access Denied</h1>
                    <p class="card-text mb-4">
                        Sorry, you don't have permission to access this page.
                    </p>
                    <p class="text-muted mb-4">
                        This area is restricted based on your user role.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            Return to Homepage
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            Sign in with a different account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // You can add any custom scripts here
    </script>
}