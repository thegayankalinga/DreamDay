@model DreamDay.ViewModels.Events.WeddingEventDashboardViewModel

<h2>My Wedding Events</h2>

<!-- Cards -->
<div class="row">
    @if (Model.Events != null)
    {
        foreach (var evt in Model.Events)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@evt.Title</h5>
                        <p class="card-text">@evt.StartTime.ToString("g") - @evt.EndTime.ToString("g")</p>
                        <p class="card-text"><strong>Venue:</strong> @evt.Venue?.Name</p>
                        <p class="card-text"><strong>Checklist:</strong> @evt.Checklist?.Title</p>
                        <a href="@Url.Action("Details", "Event", new { id = evt.Id })" class="btn btn-primary">View / Edit</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Add Event Button -->
<button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addEventModal">Add New Event</button>

<!-- Modal -->
<div class="modal fade" id="addEventModal" tabindex="-1" aria-labelledby="addEventModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form asp-action="CreateEvent" asp-controller="Event" method="post">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addEventModalLabel">Add New Event</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="mb-3">
                <label asp-for="NewEvent.Title" class="form-label"></label>
                <input asp-for="NewEvent.Title" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="NewEvent.Description" class="form-label"></label>
                <textarea asp-for="NewEvent.Description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="NewEvent.StartTime" class="form-label"></label>
                <input asp-for="NewEvent.StartTime" type="datetime-local" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="NewEvent.EndTime" class="form-label"></label>
                <input asp-for="NewEvent.EndTime" type="datetime-local" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="NewEvent.VenueId" class="form-label">Venue (Optional)</label>
                <select asp-for="NewEvent.VenueId" class="form-control" asp-items="Model.AvailableVenues">
                    <option value="">-- Select Venue --</option>
                </select>
            </div>
            <!-- Optional: ChecklistId as hidden or dropdown -->
            <div class="mb-3">
                <label asp-for="NewEvent.ChecklistId" class="form-label">Checklist (Optional)</label>
                <select asp-for="NewEvent.ChecklistId" class="form-control" asp-items="Model.AvailableChecklists">
                    <option value="">-- Select Checklist --</option>
                </select>
            </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Create Event</button>
        </div>
      </div>
    </form>
  </div>
</div>
