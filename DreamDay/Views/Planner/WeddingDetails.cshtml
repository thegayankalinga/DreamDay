@model DreamDay.ViewModels.WeddingDetailsViewModel
@{
    ViewData["Title"] = "Wedding Details";
    Layout = "_Dashboard";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Wedding Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Planner" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Wedding Details</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Wedding Info Card -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-ring me-1"></i>
                Wedding Overview: @Model.CoupleName
            </div>
            <div>
                <a asp-controller="Planner" asp-action="MessageCouple" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="fas fa-envelope me-1"></i> Message Couple
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h5 class="text-primary">Couple Information</h5>
                        <p><strong>Names:</strong> @Model.CoupleName</p>
                        <p><strong>Email:</strong> @Model.CoupleEmail</p>
                        <p><strong>Phone:</strong> @Model.CouplePhone</p>
                    </div>
                    
                    <div class="mb-3">
                        <h5 class="text-primary">Wedding Details</h5>
                        <p><strong>Date:</strong> @Model.WeddingDate.ToString("dddd, MMMM d, yyyy")</p>
                        <p><strong>Days Until Wedding:</strong> 
                            @((Model.WeddingDate - DateTime.Now).Days) days
                        </p>
                        <p><strong>Guest Count:</strong> @Model.GuestCount</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <h5 class="text-primary">Venue Information</h5>
                        <p><strong>Venue:</strong> @Model.VenueName</p>
                        <p><strong>Address:</strong> @Model.VenueAddress</p>
                    </div>
                    
                    <div class="mb-3">
                        <h5 class="text-primary">Budget Overview</h5>
                        <p><strong>Total Budget:</strong> $@Model.BudgetTotal.ToString("N2")</p>
                        <p><strong>Total Spent:</strong> $@Model.BudgetSpent.ToString("N2")</p>
                        <p><strong>Remaining:</strong> $@((Model.BudgetTotal - Model.BudgetSpent).ToString("N2"))</p>
                        <div class="progress">
                            @{
                                var percentage = Model.BudgetTotal > 0 ? (int)Math.Round(Model.BudgetSpent / Model.BudgetTotal * 100) : 0;
                                var progressClass = percentage > 90 ? "bg-danger" : (percentage > 75 ? "bg-warning" : "bg-success");
                            }
                            <div class="progress-bar @progressClass" role="progressbar" style="width: @percentage%;" 
                                 aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">@percentage%</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <h5 class="text-primary">Planning Progress</h5>
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: @Model.ChecklistProgress%;" 
                             aria-valuenow="@Model.ChecklistProgress" aria-valuemin="0" aria-valuemax="100">@Model.ChecklistProgress%</div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <h5 class="text-primary">Important Notes</h5>
                    <p>@(string.IsNullOrEmpty(Model.ImportantNotes) ? "No notes available." : Model.ImportantNotes)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Manage Checklist</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ChecklistProgress% Complete</div>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Planner" asp-action="ManageChecklist" asp-route-id="@Model.Id" class="btn btn-primary btn-circle">
                                <i class="fas fa-tasks"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Manage Guests</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GuestCount Guests</div>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Planner" asp-action="ManageGuests" asp-route-id="@Model.Id" class="btn btn-success btn-circle">
                                <i class="fas fa-users"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Manage Budget</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.BudgetSpent.ToString("N0") of $@Model.BudgetTotal.ToString("N0")</div>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Planner" asp-action="ManageBudget" asp-route-id="@Model.Id" class="btn btn-info btn-circle">
                                <i class="fas fa-dollar-sign"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Manage Timeline</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@((Model.WeddingDate - DateTime.Now).Days) Days Left</div>
                        </div>
                        <div class="col-auto">
                            <a asp-controller="Planner" asp-action="ManageTimeline" asp-route-id="@Model.Id" class="btn btn-warning btn-circle">
                                <i class="fas fa-calendar"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Notes Section -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-sticky-note me-1"></i>
            Add/Edit Notes
        </div>
        <div class="card-body">
            <form asp-controller="Planner" asp-action="UpdateNotes" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="mb-3">
                    <label for="notes" class="form-label">Wedding Notes</label>
                    <textarea class="form-control" id="notes" name="Notes" rows="5">@Model.ImportantNotes</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save Notes</button>
            </form>
        </div>
    </div>
</div>