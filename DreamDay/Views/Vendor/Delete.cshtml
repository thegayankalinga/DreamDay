@model DreamDay.Models.Vendor

@{
    ViewData["Title"] = "Delete Vendor";
    Layout = "_Dashboard";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Vendor</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Vendor" asp-action="Index">Vendors</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash-alt me-1"></i>
            Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h3>Are you sure you want to delete this vendor?</h3>
                <p>This action cannot be undone.</p>
            </div>
            
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">Service Type</dt>
                        <dd class="col-sm-9">@Model.ServiceType</dd>
                        
                        <dt class="col-sm-3">Contact Info</dt>
                        <dd class="col-sm-9">@(Model.ContactInfo ?? "Not provided")</dd>
                    </dl>
                    
                    @if (Model.WeddingEventVendors?.Count > 0)
                    {
                        <div class="alert alert-warning">
                            <strong>Warning!</strong> This vendor is associated with @Model.WeddingEventVendors.Count wedding events. Deleting this vendor will remove these associations.
                        </div>
                    }
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>