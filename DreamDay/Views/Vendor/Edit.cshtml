@model DreamDay.Models.Vendor
@using DreamDay.Data.Enums

@{
    ViewData["Title"] = "Edit Vendor";
    Layout = "_Dashboard";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Vendor</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Vendor" asp-action="Index">Vendors</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Edit Vendor: @Model.Name
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ServiceType" class="control-label">Service Type</label>
                            <select asp-for="ServiceType" class="form-select">
                                @foreach (var type in ViewBag.ServiceTypes)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                            <span asp-validation-for="ServiceType" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ContactInfo" class="control-label">Contact Information</label>
                            <input asp-for="ContactInfo" class="form-control" placeholder="Phone number" />
                            <span asp-validation-for="ContactInfo" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}